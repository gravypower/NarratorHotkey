<Window x:Class="NarratorHotkey.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <CheckBox x:Name="StartWithWindowsCheckBox" 
                      Content="Start with Windows" 
                      Margin="0,5"/>
            
            <CheckBox x:Name="MinimizeToTrayCheckBox" 
                      Content="Minimize to tray" 
                      Margin="0,5"/>
            
            <!-- Add more settings controls here -->
        </StackPanel>

        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Save" 
                    Width="75" 
                    Height="25" 
                    Margin="0,0,10,0" 
                    Click="SaveButton_Click"/>
            <Button Content="Cancel" 
                    Width="75" 
                    Height="25" 
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
