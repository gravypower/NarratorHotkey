<Window x:Class="NarratorHotkey.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <GroupBox Header="TTS Provider" Margin="0,10">
                <StackPanel Margin="5">
                    <Label Content="Select Provider:"/>
                    <ComboBox x:Name="ProviderComboBox"
                             Margin="0,5"
                             SelectionChanged="ProviderComboBox_SelectionChanged"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Voice Settings" Margin="0,10">
                <StackPanel Margin="5">
                    <Label Content="Select Voice:"/>
                    <ComboBox x:Name="VoiceComboBox"
                             Margin="0,5"/>

                    <Label Content="Speech Rate:"/>
                    <Slider x:Name="SpeechRateSlider"
                           Minimum="-10"
                           Maximum="10"
                           TickFrequency="1"
                           IsSnapToTickEnabled="True"
                           TickPlacement="BottomRight"
                           Margin="0,5"/>
                    <TextBlock Text="{Binding ElementName=SpeechRateSlider, Path=Value, StringFormat=Rate: {0}}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </GroupBox>

            <Button Content="Test Voice"
                    Width="100"
                    HorizontalAlignment="Left"
                    Margin="0,5"
                    Click="TestVoice_Click"/>
        </StackPanel>

        <Border Grid.Row="1"
                Background="#F0F0F0"
                BorderBrush="#D0D0D0"
                BorderThickness="1"
                Margin="0,10,0,0"
                Padding="10"
                MinHeight="60"
                x:Name="ProgressBorder">
            <StackPanel>
                <TextBlock Text="Status:"
                          FontWeight="Bold"
                          Margin="0,0,0,5"/>
                <TextBlock x:Name="StatusText"
                          TextWrapping="Wrap"
                          Foreground="#333333"
                          Text="Ready"/>
                <ProgressBar x:Name="ProgressIndicator"
                            Height="4"
                            IsIndeterminate="True"
                            Visibility="Collapsed"
                            Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Save"
                    Width="75"
                    Height="25"
                    Margin="0,0,10,0"
                    Click="SaveButton_Click"/>
            <Button Content="Cancel"
                    Width="75"
                    Height="25"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>